<!DOCTYPE html>
<html lang="en">
<head>

    <%- include ("../../partials/head.ejs") %>

    <title>Admin / Brands</title>
</head>
<body>
 
    <%- include ("../../partials/header.ejs") %>

    <%- include ("../../partials/bubble.ejs") %>

    <div class="wrapper">
        <h2 class="homeHeading">Brand List</h2>
        <div class="row">
            <div class="col-6">
                <table class="table table-striped">
                        <thead>
                            <tr>
                                <th style="width: 25%">Name</th>
                                <th style="width: 55%">Description</th>
                                <th style="width: 20%"></th>
                                <!-- <th style="width: 10%;"></th> -->
                            </tr>
                        </thead>
                        <tbody>
                            <% brands.forEach(function(brand){ %>
                                
                                <tr>
                                    <td><%=brand.name%></td>
                                    <td><%=brand.description%></td>
                                    <td>
                                        <form action="/admin/brand/<%= brand._id %>?_method=DELETE" method="post">
                                            <button class="btn" style="color: darkred;" type="submit" onclick="return confirm('Delete?')"><i class="bi bi-trash-fill"></i></button>
                                        </form>
                                    </td>
                                </tr>

                            <%}) %>
                        </tbody>
                </table>
            </div>
            <div class="col-6">
                <form action="/admin/brand/new" method="post" style="padding-left: 50px">
                    <h2 class="homeHeading" style="padding: 0; margin: 0 auto 20px; border: none;">Create New Brand</h2>
                    <input type="text" name="name" placeholder="Name Brand" class="form-control">
                    <br>
                    <textarea name="description" class="form-control" cols="30" rows="10" placeholder="Description"></textarea><br>
                    <input type="submit" value="Create" class="btn btn-primary form-control" onclick="return confirm('Create?')">
                </form>
            </div>
        </div>
    </div>

    <%- include ("../../partials/message.ejs")  %>

</body>
</html>