<!DOCTYPE html>
<html lang="en">
<head>

    <%- include ("../../partials/head.ejs") %>

    <title>Admin / Users</title>
</head>
<body>
 
    <%- include ("../../partials/header.ejs") %>

    <%- include ("../../partials/bubble.ejs") %>
    <div class="wrapper-users wrapper">
        <h2 class="homeHeading">Users List</h2>
        <table class="table">
            <thead>
                <tr>
                    <th style="width: 20%;">Create At</th>
                    <th style="width: 30%;" >Name</th>
                    <th style="width: 30%;">Email</th>
                    <th style="width: 20%;">Action</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(function(user){%>
                    <tr>
                        <td><%= user.createAt.toDateString() %></td>
                        <td><%= user.name %></td>
                        <td><%= user.email %></td>
                        <td>
                            <form action="/admin/user/<%= user._id %>?_method=DELETE" method="post">
                                <a href="/admin/user/<%= user._id %>" class="btn btn-link" style="font-size: 20px; color: forestgreen;"><i class="bi bi-eye-fill"></i></a>
                                <button class="btn btn-link" onclick="return confirm('Delete?')" type="submit" style="font-size: 20px; color: darkred;"><i class="bi bi-trash-fill"></i></button>                            
                            </form>
                        </td>
                    </tr>

                <%})%>
            </tbody>
        </table>

    </div>

    <%- include ("../../partials/message.ejs")  %>

</body>
</html>