<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ("../../partials/head.ejs") %>
    <title>Login</title>
</head>
<body>

    <%- include ("../../partials/header.ejs") %>

    <a href="/" class="backPrePage"><i class="bi bi-arrow-bar-left"></i> Back to previous page</a>

    <div class="loginSignupContainer">
        <div class="button-toggle-group btn-group">
            <button class="btn btn-signin" type="button">LOGIN</button>
            <button class="btn btn-signup" type="button">REGISTER</button>
            <span class="btn-toggle"></span>
        </div>
        <form action="/login" method="post" class="form-signin">
            <input type="email" class="form-control p-3 mb-4" name="email" placeholder="Email Address" required>
            <input type="password" class="form-control p-3 mb-4" name="password" placeholder="Password" part="Password" required>
            <a href="#" class="btn btn-md btn-link mb-4 btn-block">Forget password?</a>
            <button type="submit" class="btn btn-md btn-primary btn-block">Log In</button>
        </form>
        <form action="/register" method="post" class="form-signup">
            <input type="text" class="form-control p-3 mb-4" name="name" placeholder="Fullname" required>
            <input type="email" class="form-control p-3 mb-4" name="email" placeholder="Email Addresss" required>
            <input type="password" name="password" class="form-control p-3 mb-4" placeholder="Password" required>
            <button type="submit" class="btn btn-md btn-primary btn-block mb-4">Register</button>
        </form>
    </div>

    <%- include ("../../partials/message.ejs")  %>

    <!-- <%- include ("../../partials/footer.ejs") %> -->

</body>
</html>